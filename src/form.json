{
  "key": "experiment_registration",
  "name": "Rejestracja eksperymentu",
  "description": "Formularz tworzenia eksperymentu (tabela 'Eksperyment').",
  "entity": "Eksperyment",
  "layout": {
    "columns": 2
  },
  "fields": [
    {
      "id": "project_id",
      "label": "Projekt",
      "placeholder": "ID projektu lub wybór z listy",
      "type": "text",
      "validationType": "string",
      "value": "",
      "row": 1,
      "col": 1,
      "colspan": 1,
      "dbField": "Eksperyment.projektID",
      "permissions": {
        "read": ["admin", "moderator", "badacz"],
        "write": ["admin", "moderator"]
      }
    },
    {
      "id": "name",
      "label": "Nazwa eksperymentu",
      "placeholder": "np. Wpływ temperatury na wynik reakcji",
      "type": "text",
      "validationType": "string",
      "value": "",
      "row": 1,
      "col": 2,
      "colspan": 1,
      "dbField": "Eksperyment.nazwa",
      "permissions": {
        "read": ["admin", "moderator", "badacz", "viewer"],
        "write": ["admin", "moderator"]
      }
    },
    {
      "id": "author_id",
      "label": "Autor (uzytkownikID)",
      "placeholder": "np. 1",
      "type": "number",
      "validationType": "number",
      "value": "",
      "row": 2,
      "col": 1,
      "colspan": 1,
      "dbField": "Eksperyment.autorID",
      "permissions": {
        "read": ["admin", "moderator"],
        "write": ["admin", "moderator"]
      }
    },
    {
      "id": "form_id",
      "label": "Formularz pomiarowy",
      "placeholder": "ID formularza obserwacji",
      "type": "text",
      "validationType": "string",
      "value": "",
      "row": 2,
      "col": 2,
      "colspan": 1,
      "dbField": "Eksperyment.formularzID",
      "permissions": {
        "read": ["admin", "moderator"],
        "write": ["admin", "moderator"]
      }
    },
    {
      "id": "description",
      "label": "Opis eksperymentu",
      "placeholder": "Krótki opis celu i przebiegu eksperymentu",
      "type": "textarea",
      "validationType": "string",
      "value": "",
      "row": 3,
      "col": 1,
      "colspan": 2,
      "dbField": "Eksperyment.opis",
      "permissions": {
        "read": ["admin", "moderator", "badacz", "viewer"],
        "write": ["admin", "moderator", "badacz"]
      }
    },
    {
      "id": "details",
      "label": "Szczegóły (JSON)",
      "placeholder": "{\"temp_start\": 20, \"temp_end\": 80}",
      "type": "textarea",
      "validationType": "string",
      "value": "",
      "row": 4,
      "col": 1,
      "colspan": 2,
      "dbField": "Eksperyment.details",
      "permissions": {
        "read": ["admin", "moderator", "badacz"],
        "write": ["admin", "moderator", "badacz"]
      }
    },
    {
      "id": "status",
      "label": "Status",
      "type": "select",
      "options": [
        { "label": "Nowy", "value": "new" },
        { "label": "W toku", "value": "in_progress" },
        { "label": "Zakończony", "value": "finished" }
      ],
      "validationType": "string",
      "value": "new",
      "row": 5,
      "col": 1,
      "colspan": 1,
      "dbField": "Eksperyment.status",
      "permissions": {
        "read": ["admin", "moderator", "badacz", "viewer"],
        "write": ["admin", "moderator"]
      }
    }
  ]
}
